# Definition for singly-linked list.
# class ListNode:
#     def __init__(self, x):
#         self.val = x
#         self.next = None

class Solution:
    def addTwoNumbers(self, l1: ListNode, l2: ListNode) -> ListNode:
        head = ListNode(0)
        carry, l = 0, head
        while l1 or l2:
            sum = 0
            if l1:
                sum+=l1.val
                l1 = l1.next
            if l2:
                sum+=l2.val
                l2 = l2.next
            sum+=carry
            carry = sum//10
            l.next = ListNode(sum%10)
            l = l.next
        if carry>0:
            l.next = ListNode(1)
        return head.next
